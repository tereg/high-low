<div class="container">
  <div class = "row">
    <div class="col-lg-8 col-lg-offset-2">
      <form action="/daily_activities/<%= @daily_activity.id%>" method="POST">
      <input type="hidden" name="_method" value="PUT">
        <label>What were your highs today?</label><br>
        <textarea name="highs" class="form-control" rows="10"><%= @daily_activity.highs %></textarea><br>

        
        <label>What were your lows today?</label><br>
        <textarea name="lows" class="form-control" rows="10"><%= @daily_activity.lows %></textarea><br>

        <button type="submit" class="btn btn-default pull-right">Submit</button>
      </form>
    </div>
  </div>
</div>