<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row"> 
    <div id="logo-container" class="col-lg-8 col-lg-offset-2">
      <form id="register-form" action="/users" method="POST">
        <div class="form-group">
          <label>Username: </label>
          <input type="text" class="form-control" name="user[username]"><br>
        </div>

        <div class="form-group">
          <label>Email: </label>
          <input type="email" class="form-control" name="user[email]"><br>
        </div>

        <div class="form-group">
          <label>Phone Number: </label>
          <input type="text" class="form-control" name="user[phone_number]"><br>
        </div>

        <div class="form-group">
          <label>Password: </label>
          <input type="password" class="form-control" name="user[password]"><br>
        </div>

        <div class="form-group">
          <label>Password Confirmation: </label>
          <input type="password" class="form-control" name="password_confirmation"><br>
        </div>

        <button type="submit" class="btn btn-default">Create Account</button>
      </form>
    </div>
  </div>
</div>